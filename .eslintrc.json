{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["plugin:prettier/recommended"],
  "rules": {
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "import",
        "next": "*"
      },
      {
        "blankLine": "never",
        "prev": "import",
        "next": "import"
      },
      {
        "blankLine": "always",
        "prev": ["const", "let", "var"],
        "next": ["block-like", "multiline-expression"]
      },
      {
        "blankLine": "always",
        "prev": ["multiline-expression"],
        "next": ["*"]
      },
      {
        "blankLine": "always",
        "prev": ["block-like"],
        "next": ["const", "let", "var"]
      },
      {
        "blankLine": "always",
        "prev": ["block-like"],
        "next": ["block-like", "expression"]
      },
      {
        "blankLine": "always",
        "prev": ["block-like"],
        "next": ["return"]
      }
    ]
  }
}
